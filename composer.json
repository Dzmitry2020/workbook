{
  "prefer-stable": true,
  "require": {
    "texlab/mydb": "^v0.0.6",
    "ext-mysqli": "*",
    "texlab/html": "^0.10"
  },
  "autoload": {
    "psr-4": {
      "Controller\\": "src/Controller",
      "Core\\": "src/Core",
      "View\\": "src/View",
      "Model\\": "src/Model"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.2",
    "phpstan/phpstan": "^0.12",
    "vimeo/psalm": "^3.0@dev",
    "squizlabs/php_codesniffer": "3.*"
  },
  "minimum-stability": "dev",
  "scripts": {
    "test": "phpunit --testsuite alltests",
    "phpstan": "phpstan analyse -c phpstan.neon",
    "psalm": "psalm",
    "codestyle": "phpcs",
    "codestyle:fix": "phpcbf"
  }
}
